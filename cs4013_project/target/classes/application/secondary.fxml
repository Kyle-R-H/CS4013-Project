<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SecondaryController">
    <children>
        <HBox alignment="TOP_LEFT">
            <Button text="Home" onAction="#switchToPrimary" />
        </HBox>

        <Label text="Student Login" />

        <TextField fx:id="studentNumberField" promptText="Student Number" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button fx:id="loginButton" text="Login" onAction="#handleLoginButtonAction" />
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>